<div class="w3-container w3-mobile">
  <div class="w3-card-4" style="width:40%;">
    <header class="w3-container w3-purple">
      <h2>Create New Post</h2>
    </header>
    <br>
    <div class="container">
      <form class="new-post-form">
        <div>
          <label for="post-title">Title</label>
          <input type="text" class="post-title" name="post-title" />
        </div>
        <br>
        <div>
          <label for="content">Text</label>
          <textarea class="content" name="content"></textarea>
          <br>
        </div>
        <br>
        <button type="submit" class="w3-button w3-yellow">Create</button>
    </div>
    </form>
    <footer class="w3-container w3-purple ">
      <br>
    </footer>
  </div>
  <br>
  {{!-- user card --}}
  <div class="w3-card-4 w3-mobile" style="width:40%;">
    <header class="w3-container w3-green">
      <h2>About Me</h2>
    </header>
    <div class="w3-container">
      {{> user-info}}
    </div>
    <footer class="w3-container w3-green ">
      <br>
    </footer>
  </div>
  <br>

  {{#if posts.length}}
  <section>
    <h4>Your Posts</h4>
    <ol>
      {{#each posts as |post|}}
      <li>
        {{> post-info post}}
        <a href="/dashboard/edit/{{post.id}}" class="edit-link">Edit post</a>
      </li>
      {{/each}}
    </ol>
</div>
</section>
</div>
{{/if}}
<script src="/js/newPost.js"></script>